<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F6F2" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/conversation_single_read_status"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/dot_icon"
            android:visibility="invisible" />

        <com.example.chanhy.shopsy.Utils.RoundedImageView
            android:id="@+id/conversation_single_userimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/conversation_single_read_status"
            android:src="@drawable/nouserimg" />

        <com.example.chanhy.shopsy.Utils.CustomTextView
            android:id="@+id/conversation_single_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/conversation_single_message_time"
            android:layout_toRightOf="@+id/conversation_single_userimage"
            android:text="Prem kumar"
            android:textColor="#171717"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.example.chanhy.shopsy.Utils.CustomTextView
            android:id="@+id/conversation_single_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:text="11 min ago"
            android:textColor="#4988F3"
            android:textSize="13sp" />

        <com.example.chanhy.shopsy.Utils.CustomTextView
            android:id="@+id/conversation_single_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_single_username"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/conversation_single_userimage"
            android:singleLine="true"
            android:text="d asdasd asd asasf  fdfd fd df df df d fd fdf daS faws afw aeS aes wa wa "
            android:textColor="#C2C2C2"
            android:textSize="13sp" />

        <com.example.chanhy.shopsy.Utils.CustomTextView
            android:id="@+id/conversation_single_new_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/conversation_single_message"
            android:layout_below="@+id/conversation_single_message"
            android:layout_marginTop="4dp"
            android:text="3 more Replies"
            android:textColor="#4988F3"
            android:textSize="14sp" />

        <com.example.chanhy.shopsy.Utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignLeft="@+id/conversation_single_new_message"
            android:layout_below="@+id/conversation_single_new_message"
            android:layout_marginTop="5dp"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>