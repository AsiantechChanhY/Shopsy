<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1A237E" >

    <ImageView
        android:id="@+id/conversation_detail_header_userimage"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nouserimg" />

    <com.example.chanhy.shopsy.Utils.CustomTextView
        android:id="@+id/conversation_detail_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/conversation_detail_header_userimage"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:typeface="sans" />

</RelativeLayout>