<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#F7F6F2" >

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        card_view:cardUseCompatPadding="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#FDFDFD" >

            <com.example.chanhy.shopsy.StaggeredGridView.DynamicHeightImageView
                android:id="@+id/feed_single_productimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#ECECEC"
                android:contentDescription="@string/description"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/feed_single_favourite_heart"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/feed_single_productimage"
                android:contentDescription="@string/description"
                android:src="@drawable/favtwo" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feed_single_productimage"
                android:background="#FDFDFD" >

                <View
                    android:id="@+id/feed_single_view1"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="#cdcdcd" />

                <com.example.chanhy.shopsy.Utils.CustomTextView
                    android:id="@+id/feed_single_productname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_below="@+id/feed_single_view1"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="18dp"
                    android:singleLine="true"
                    android:text="bottle fdf df dfh uiif hiuuhuih iu hiu iuh iuh uih uih ui iu iu iudfhiuhiuhuih iuhi d  "
                    android:textColor="#CC000000"
                    android:textSize="16sp"
                    android:typeface="normal" />

                <com.example.chanhy.shopsy.Utils.CustomTextView
                    android:id="@+id/feed_single_productlink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/feed_single_productname"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="1dp"
                    android:text="link def d hfdfdfdf dsdjsjdsl"
                    android:textColor="#4e4e4e"
                    android:textSize="14sp"
                    android:typeface="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="9dp"
                    android:layout_below="@+id/feed_single_productlink"
                    android:textSize="3dp"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/feed_single_productimage"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="15dp"
                android:background="#B3000000" >

                <com.example.chanhy.shopsy.Utils.CustomTextView
                    android:id="@+id/feed_single_productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:text="600rs"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </RelativeLayout>

            <com.example.chanhy.shopsy.Utils.CircularImageView
                android:id="@+id/feed_single_userimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/relativeLayout1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/ic_launcher"
                app:civ_border="true"
                app:civ_borderColor="#FFFFFFFF"
                app:civ_borderWidth="2dp"
                app:civ_selector="true"
                app:civ_selectorColor="#4403a9f4"
                app:civ_selectorStrokeColor="#aa5677fc"
                app:civ_selectorStrokeWidth="2dp"
                app:civ_shadow="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
