<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView_additem_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear_layout_additem_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#D8D8D8"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView_main_add_item_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/description"
                    android:src="@drawable/add_photo_plus" />

                <TextView
                    android:id="@+id/textView_add_item_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/addphoto"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textView_detail_add_item_add_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/conveytheshape"
                    android:textSize="16sp"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/textView_add_item_add_photo_dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="@string/doublequotes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/linear_layout_itemtitle_additem_final_all_image_1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#D8D8D8"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView_1_add_item_add_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/add_photo_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_itemtitle_additem_final_all_image_2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#D8D8D8"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView_2_add_item_add_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/add_photo_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_itemtitle_additem_final_all_image_3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#D8D8D8"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView_3_add_item_add_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/add_photo_plus" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_itemtitle_additem_final_all_image_4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:background="#D8D8D8"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imageView_4_add_item_add_photo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/add_photo_plus" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_add_item_add_photo_dummy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/doublequotes" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>